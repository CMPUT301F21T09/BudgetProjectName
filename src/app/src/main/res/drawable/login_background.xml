<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3C85B9" />
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="-30"
            android:pivotX="23%"
            android:pivotY="-60%"
            android:toDegrees="-30">
            <shape android:shape="rectangle">
                <solid android:color="@color/white" />
            </shape>
        </rotate>
    </item>

    <item>
        <rotate
            android:fromDegrees="-30"
            android:pivotX="100%"
            android:pivotY="155%"
            android:toDegrees="-30">
            <shape android:shape="rectangle">
                <solid android:color="@color/white" />
            </shape>
        </rotate>
    </item>

</layer-list>

