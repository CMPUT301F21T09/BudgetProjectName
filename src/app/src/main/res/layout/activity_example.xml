<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXAMPLE ACTIVITY FOR TESTING" />

    <Button
        android:id="@+id/createhabiteventBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Habit Event" />

    <Button
        android:id="@+id/example_view_habit_event_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Habit Event Detail" />
  
    <Button
        android:id="@+id/viewHabitDetailsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Habit details" />

    <Button
        android:id="@+id/user_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Login" />


</LinearLayout>
